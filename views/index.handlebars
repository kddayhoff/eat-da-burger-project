<h1>Eat-Da-Burger</h1>

<h2>Burgers to Eat</h2>

<li>
	{{name}}

	<button class="change-burger" data-id="{{id}}" data-eatburger="{{devoured}}">
		{{#if devoured}}We ate da Burgers{{/if}}
	</button>

</li>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Eaten?</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten!<br>
    <input type="radio" name="devoured" value="0"> Still Hungry
  </div>

  <button type="submit">Add Burger</button>
</form>
